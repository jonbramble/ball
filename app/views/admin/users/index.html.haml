
.row
  .large-4.columns
    = render :partial => "shared/alert_block"

.row
  .large-2.columns
    %i{:class => 'foundicon-edit'}
    = link_to 'Meal Summary', summary_admin_users_path
  .large-2.columns
    %i{:class => 'foundicon-page'}
    = link_to 'Meal Summary (pdf)', summary_admin_users_path(:format => :pdf)
  .large-2.columns
    %i{:class => 'foundicon-page'}
    = link_to 'Meal Summary (ods)', summary_admin_users_path(:format => :ods)
  .large-6.columns

.row
  .large-2.columns
    %i{:class => 'foundicon-plus'}
    = link_to 'Add User', new_admin_user_path
.row
  .large-12.small-12.columns
    %h5 Application Administrators
    %table
      %tr
        %th Name
        %th Email
      - @admin_users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td= link_to 'Show', admin_user_path(user)
          %td= link_to 'Edit', edit_admin_user_path(user)
          %td= link_to 'Destroy', admin_user_path(user), :confirm => 'Are you sure?', :method => :delete
   
.row
  .large-12.small-12.columns
    %h5 Guests
    %table
      %tr
        %th Name
        %th Email
        %th Chosen Meal
        %th
        %th
        %th
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td=  true_false_icon(user.meal.chosen)
          %td= link_to 'Show', admin_user_path(user)
          %td= link_to 'Edit', edit_admin_user_path(user)
          %td= link_to 'Destroy', admin_user_path(user), :confirm => 'Are you sure?', :method => :delete
