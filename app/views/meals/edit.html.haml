= render :partial => "shared/header_mast"

%p Menu

= form_for [current_user, @meal], :html => { :class => "custom" } do |m|
  .row
    .large-4.columns
      = content_tag(:div, flash[:error], :id => "flash_error", :class=>"alert-box alert") if flash[:error] 
      = content_tag(:div, flash[:notice], :id => "flash_notice", :class=>"alert-box success") if flash[:notice]
      = content_tag(:div, flash[:alert], :id => "flash_alert", :class=>"alert-box alert") if flash[:alert]


  .row
    .large-4.columns
      %label{:for => "meal_vegetarian"}
        = m.check_box :vegetarian
        Vegetarian Option - select if required

  .row
    .large-4.columns
      %label
        Choice of Drink
      = m.collection_select :wine, Meal::WINE, :to_s, :to_s, {}, { :class =>"medium" }

  .row
    .large-4.columns
      %label{:for => "meal_coffee"}
        = m.check_box :coffee
        Coffee - select if required
  
  .row
    .large-4.columns
      %label
        Allergies/Intolerances
      = m.text_area :allergies
   

  .row
    .large-4.columns
      = m.submit "Submit Choices" ,:class=>"button inline"
      
